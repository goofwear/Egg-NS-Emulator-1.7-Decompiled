<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/bg_circular_white_2" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:textSize="48mm" android:textColor="@color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="80mm"/>
    <TextView android:textSize="30mm" android:textColor="@color/color_font_6" android:id="@+id/content" android:paddingLeft="90mm" android:paddingRight="90mm" android:layout_width="960mm" android:layout_height="0dp" android:layout_marginTop="50mm" android:layout_weight="1" android:paddingStart="90mm" android:paddingEnd="90mm"/>
    <FrameLayout android:id="@+id/layout_progressbar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="90mm">
        <ProgressBar android:layout_gravity="center" android:id="@+id/progressbar" android:layout_width="match_parent" android:layout_height="70mm" android:progressDrawable="@drawable/custom_progress" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <TextView android:textSize="40mm" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/tv_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0%"/>
    </FrameLayout>
    <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/layout_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="50mm" android:showDividers="middle">
        <TextView android:textSize="36mm" android:textColor="@color/color_font" android:gravity="center" android:id="@+id/cancel" android:background="@drawable/bg_circular_red_grey" android:layout_width="280mm" android:layout_height="80mm" android:layout_marginRight="80mm" android:text="@string/cancel" android:maxLines="1" android:layout_marginEnd="80mm" android:autoSizeTextType="1" android:autoSizeStepGranularity="1mm" android:autoSizeMinTextSize="10mm" android:autoSizeMaxTextSize="36mm"/>
        <TextView android:textSize="36mm" android:textColor="@color/white" android:gravity="center" android:id="@+id/ok" android:background="@drawable/bg_circular_red_bg" android:layout_width="280mm" android:layout_height="80mm" android:text="@string/sure" android:maxLines="1" android:autoSizeTextType="1" android:autoSizeStepGranularity="1mm" android:autoSizeMinTextSize="10mm" android:autoSizeMaxTextSize="36mm"/>
    </LinearLayout>
</LinearLayout>
